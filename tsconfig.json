{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext", // Use NodeNext for modern module resolution
    "moduleResolution": "NodeNext",
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "lib": ["ES2022"],
    "resolveJsonModule": true
  },
  "include": ["src"]
}
